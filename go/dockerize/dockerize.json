{
  // Comments are stripped from this file before parsing as JSON
  "portability" : {
    "linux/windows" : {
      "path_regex" : [ "s#^/mnt##" ]
    },
    "windows" : {
      "path_regex" : [ "s#^([A-Za-z]):#/\1#", "s#\\#/#g" ],
      "executable_regex" : [ "s/.exe$//" ]
    }
  }
  "containers" : {
    "ruby" : {
      "commands" : [
        "bundle",
        "ruby",
        "irb"
      ],
      "volumes" : [
        // Store bundles separately by ruby version
        "$HOME/.local/ruby/${container_version}/bundle:/usr/local/bundle"
      ]
    },
    "python" : {
      "commands" :[
        "python3",
        "pip3",
        "python",
        "pip",
        "easy_install"
      ],
      "volumes" :[
        // pip --user installs go here.
        "$HOME/.local/python/${container_version}:/root/.local"
      ]
    },
    "golang" : {
      "commands" : [
        "go",
        "godoc",
        "gofmt",
        "golint",
        "gopkgs",
        "goreturns"
      ]
    }
  }
}
