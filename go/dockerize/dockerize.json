{
  // Comments are stripped from this file before parsing as JSON
  "portability" : {
    "default" : {
      "home" : "HOME",
      "exclude_environment" : [
        "SHLVL", "SHELL", "HOSTTYPE", "_",
        "PATH", "DOCKER_HOST", "SSH_AUTH_SOCK",
		    "SSH_AGENT_PID", "LS_COLORS", "PWD"
      ]
    },
    "linux/windows" : {
      "home" : "USERPROFILE",
      "path_regex" : [ {"from":"^/mnt"} ]
    },
    "windows" : {
      "home" : "USERPROFILE",
      "path_regex" : [
        { "from" : "^([A-Za-z]):", 
          "to" : "/$1",
          "flags" : "lower" },
        { "from": "\\\\",
          "to": "/",
          "flags": "all" }],
      "executable_suffix" : ".exe",
      "exclude_environment" : [
        "", "ALLUSERSPROFILE", "APPDATA", "asl.log", "CommonProgramFiles",
    		"CommonProgramFiles(x86)", "CommonProgramW6432", "COMPUTERNAME", "ComSpec",
    		"HOMEDRIVE", "HOMEPATH", "LOCALAPPDATA", "LOGONSERVER",
    		"NUMBER_OF_PROCESSORS", "OneDrive", "OS", "Path", "PATHEXT", "PROCESSOR_ARCHITECTURE",
    		"PROCESSOR_IDENTIFIER", "PROCESSOR_LEVEL", "PROCESSOR_REVISION", "ProgramData",
    		"ProgramFiles", "ProgramFiles(x86)", "ProgramW6432", "PROMPT", "PSModulePath",
    		"PUBLIC", "SESSIONNAME", "SystemDrive", "SystemRoot", "TEMP", "TMP", "USERDOMAIN",
    		"USERDOMAIN_ROAMINGPROFILE", "USERNAME", "USERPROFILE", "VS110COMNTOOLS",
    		"VS120COMNTOOLS", "VS140COMNTOOLS", "windir"
      ]
    }
  },
  "containers" : {
    "ruby" : {
      "commands" : [
        "bundle",
        "ruby",
        "irb"
      ],
      "volumes" : [
        // Store bundles separately by ruby version
        "$HOME/.local/ruby/${container_version}/bundle:/usr/local/bundle:delegated"
      ]
    },
    "python" : {
      "commands" :[
        "python3",
        "pip3",
        "python",
        "pip",
        "easy_install"
      ],
      "volumes" :[
        // pip --user installs go here.
        "$HOME/.local/python/${container_version}:/root/.local:delegated"
      ]
    },
    "golang" : {
      "commands" : [
        "go",
      	"go-outline",
      	"go-symbols",
       	"gocode",
      	"godef",
        "godoc",
        "gofmt",
        "golint",
      	"gomodifytags",
        "gopkgs",
      	"gorename",
        "goreturns",
      	"guru"
      ],
      "volumes" :[
        // delegate ~/go to the go container.
        "$HOME/.local/go:/go:delegated"
      ]
    }
  }
}
